{
    "name": "sam/theatrical",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "approvals/approval-tests": "^1.4",
        "symplify/easy-coding-standard": "9.4.70",
        "phpstan/phpstan": "^0.12.99",
        "phpstan/phpstan-phpunit": "^0.12.22",
        "symplify/phpstan-extensions": "^9.4",
        "rector/rector": "^0.11.58"
    },
    "authors": [
        {
            "name": "Sam Cranford",
            "email": "sam@cranford.fr"
        }
    ],
    "require": {
        "php": "^8",
        "ext-intl": "*"
    },
    "autoload": {
        "psr-4": {
            "Theatrical\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "checkcode": "phpcs src tests --standard=PSR12",
        "fixcode": "phpcbf src tests --standard=PSR12",
        "test": "phpunit  --colors=always --testdox",
        "tests": "phpunit  --colors=always --testdox",
        "test-coverage": "phpunit --coverage-html build/coverage",
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --fix --ansi",
        "phpstan": "phpstan analyse --ansi --error-format symplify",
        "rector-dry-run": "rector process --dry-run --ansi -vvv",
        "rector": "rector process --ansi -vvv"
    }
}
